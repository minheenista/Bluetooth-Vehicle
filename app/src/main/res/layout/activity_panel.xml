<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="380dp"
            android:layout_height="186dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_car"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_connect"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_button_connect"
            app:layout_constraintEnd_toStartOf="@+id/img_stop"
            app:layout_constraintTop_toTopOf="@+id/img_stop" />

        <ImageView
            android:id="@+id/img_stop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"

            android:src="@drawable/ic_button_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_up"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_button_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_button_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_down"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_button_down"
            app:layout_constraintStart_toStartOf="@+id/img_up"
            app:layout_constraintTop_toBottomOf="@+id/img_up" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/ic_button_right"
            app:layout_constraintStart_toEndOf="@+id/img_left"
            app:layout_constraintTop_toTopOf="@+id/img_left" />

        <ImageView
            android:id="@+id/img_light"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_button_light"
            app:layout_constraintEnd_toEndOf="@+id/img_stop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_intermitentes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_intermitentes"
            app:layout_constraintStart_toStartOf="@+id/img_light"
            app:layout_constraintTop_toTopOf="@id/img_light" />

        <ImageView
            android:id="@+id/img_lights_bajas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_button_lights_bajas"
            app:layout_constraintStart_toStartOf="@+id/img_intermitentes"
            app:layout_constraintTop_toTopOf="@id/img_intermitentes" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>